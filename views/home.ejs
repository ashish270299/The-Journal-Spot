
<%- include("partials/header"); -%>

    <h1 class="heading">The Journal Spot</h1>
    <div class="info">
      <h4><%= startingContent %></h4>
      <h4>Just start by clicking on COMPOSE button and publish. </h4>
      <h4>Your Posts will be saved down here.</h4>
    </div>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>


    <% }) %>


